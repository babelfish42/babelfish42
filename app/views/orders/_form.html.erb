<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation"> 
      <h2><%= t('errors.template.header', :count=>@order.errors.size,
        :model=>t('activerecord.models.order')) %>.</h2> 
      <p><%= t('errors.template.body') %></p> 
 
      <ul> 
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li> 
      <% end %>
      </ul> 
    </div> 
  <% end %>
	
	<form>
	<table border="0" cellpadding="3" cellspacing="0">
  <tr>
  	<td><%= f.label :title_type %> </td>
    <td><%= f.select :title_type, Order::TITLE, :prompt => t('.title_prompt_html') %></td>
  </tr>
  <tr>
    <td><%= f.label :name %></td>
    <td><%= f.text_field :name, :size => 40 %></td>
  </tr>
  <tr>  
    <td><%= f.label :firstname %> </td>
    <td><%= f.text_field :firstname, :size => 40 %></td>
   </tr>

  <tr>
    <td><%= f.label :address %></td>
    <td><%= f.text_field :address, :size => 40 %></td>
    <td><%= f.label :hno %></td>
    <td><%= f.text_field :hno, :size => 4 %></td>
  </tr>
  <tr>
    <td><%= f.label :zip %> </td>
    <td><%= f.text_field :zip, :size => 4 %></td>
    <td><%= f.label :city %> </td>
    <td><%= f.text_field :city, :size => 40 %></td>
  </tr> 
  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email, :size => 40 %></td>
  </tr> 
  <tr>
    <td><%= f.label :pay_type %></td>
    <td><%= f.select :pay_type, Order::PAYMENT_TYPES, :prompt => t('.pay_prompt_html') %></td>
  </tr> 
    </table>
  </form>
  <div class="actions"> 
    <%= f.submit t('.submit') %>
  </div> 

<% end %>